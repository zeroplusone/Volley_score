<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Hosting team</th>
      <th>Guest team</th>
      <th>Court</th>
      <th>Hosting team score</th>
      <th>Guest team score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.time %></td>
        <td><%= match.hosting_team_id %></td>
        <td><%= match.guest_team_id %></td>
        <td><%= match.court_id %></td>
        <td><%= match.hosting_team_score %></td>
        <td><%= match.guest_team_score %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
